user_tty() { 
	if test -z "${nosh_run_package}"
	then
		grep -q "^$1\>" /etc/ttys || printf >> /etc/ttys "%s\t\"%s\"\t%s\t%s\t%s\n" "$1" "/bin/exec foreground pause ; false" "linux-16color" "on" "secure"
	fi
}
