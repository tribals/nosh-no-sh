	:ic=\E[@:dc=\E[P:sf=\E[S:sr=\E[T:al=\E[L:dl=\E[M:do=\E[B:le=\E[D:nd=\E[C:up=\E[A:\
	:k1=\EOP:k2=\EOQ:k3=\EOR:k4=\EOS:k5=\E[15~:k6=\E[17~:k7=\E[18~:k8=\E[19~:k9=\E[20~:k;=\E[21~:F1=\E[23~:F2=\E[24~:\
