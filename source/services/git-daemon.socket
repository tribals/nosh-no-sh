[Unit]
Description=git socket

[Socket]
Backlog=2
BindIPv6Only=both
ListenStream=git
MaxConnections=16
UCSPIRules=true
NoDelay=false
# Change this to false if git-daemon ever gains the ability to be passed the listening socket.
Accept=true

[Install]
WantedBy=server.target
